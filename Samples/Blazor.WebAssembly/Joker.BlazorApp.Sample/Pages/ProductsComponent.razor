@page "/productscomponent"
@inherits ProductsComponentBase

<h1>All products</h1>
<section>
    @if (Products == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="col-12 row">
            <b>TODO IsLoading: </b>
            @*@ViewModel.ProductsListViewModel?.IsLoading*@
        </div>

        <div class="col-12 row">
            <EditForm class="form-inline" Model="@NewProduct" OnValidSubmit="@Add">
                <DataAnnotationsValidator></DataAnnotationsValidator>
                <ValidationSummary></ValidationSummary>
                <div class="form-group">
                    <label for="newProductName" class="col-form-label">Name </label>
                    <div>
                        <InputText class="form-control" id="newProductName" @bind-Value="@NewProduct.Name" placeholder="Enter new product name" />
                        @*<ValidationMessage class="offset-sm-3" For="@(() => NewProduct.Name)"></ValidationMessage>*@
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    <span class="oi oi-plus" title="add" aria-hidden="true" style="color: #fff"> Add</span>
                </button>
            </EditForm>
        </div>

        <div class="col-12 row">

            <div class="col-8 row">

                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th style="width:auto;text-align:left">Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Products)
                        {
                            <tr @key="product.Id">
                                <td>
                                    @product.Name
                                </td>

                                <a class="btn btn-danger" @onclick="(e => Delete(product))">
                                    <span class="oi oi-trash" title="delete" aria-hidden="true" style="color: #fff"></span>
                                </a>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-4">
                @if (SelectedProduct != null)
                {
                    <h2>Product detail</h2>

                    <EditForm Model="@SelectedProduct" OnValidSubmit="@UpdateProduct">

                        <DataAnnotationsValidator></DataAnnotationsValidator>
                        <ValidationSummary></ValidationSummary>
                        <div class="form-group row">
                            <label for="productName" class="col-sm-4 col-form-label">Name</label>
                            <div class="col-sm-8">
                                <InputText class="form-control col-sm-8" id="productName" @bind-Value="@SelectedProduct.Name" placeholder="Enter product name" />
                                <ValidationMessage class="offset-sm-3" For="@(() => SelectedProduct.Name)"></ValidationMessage>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary edit-btn">
                            <span class="oi oi-pencil" title="update" aria-hidden="true" style="color: #fff"></span> Update
                        </button>
                    </EditForm>

                    <div class="alert @StatusClass">@Message</div>

                }
            </div>
        </div>

    }
</section>